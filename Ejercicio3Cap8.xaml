<Window x:Class="Cap8_Cap9.Ejercicio3Cap8"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cap8_Cap9"
        mc:Ignorable="d"
        Title="Ejercicio3Cap8" Height="150" Width="350">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5">
            <StackPanel >
                <Label Content="What time is it ?"/>
                <TextBox x:Name="TextBoxtHora" Height="25" IsEnabled="False"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="Calcular" Content="Ver Hora" Margin="0,15" Height="25" Click="Calcular_Click"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
